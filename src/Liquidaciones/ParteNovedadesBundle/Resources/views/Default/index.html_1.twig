{% extends '::base.html.twig' %}

{% block contenido %}

    <h1>Bienvenido al sistema de Parte de Novedades</h1>
    {% if app.session.flashbag.has('aviso_error') %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
    {% for flashMessage in app.session.flashbag.get('aviso_error') %}
        <p>
            {{ flashMessage }}
        </p>
    {% endfor %}
        {{ form_errors(form) }}
    </div>
    {% endif %}
    <form action="{{ path('plantel') }}" method="post" id="form"
        {{ form_enctype(form) }}  role="form" class="form-inline" novalidate="novalidate">
        
        <div class="row">
            <div class="form-group col-md-6">              
                {{ form_label(form.legajo) }}
                <div class="input-group col-md-12">
                        {{ form_widget(form.legajo, { 'attr': {'class': 'form-control','placeholder': 'Legajo'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.legajo) }}
                </div>
            </div>
            <div class="form-group col-md-6">              
                {{ form_label(form.nroDocumento) }}
                <div class="input-group col-md-12">
                    {{ form_widget(form.nroDocumento, { 'attr': {'class': 'form-control','placeholder': 'DNI'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.nroDocumento) }}
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="form-group col-md-6">              
                {{ form_label(form.apellido) }}
                <div class="input-group col-md-12">
                        {{ form_widget(form.apellido, { 'attr': {'class': 'form-control','placeholder': 'Apellido'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.apellido) }}
                </div>
            </div>
            <div class="form-group col-md-6">              
                {{ form_label(form.nombre) }}
                <div class="input-group col-md-12">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control','placeholder': 'Nombre'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>    
                
        {{ form_rest(form) }}
        <div class="row">
            <div class="col-md-12" style="margin-top: 30px;">
                <button id="buscar" type="submit" class="btn btn-ba">Buscar</button>
                <button type="reset" class="btn btn-default" data-dismiss="modal">Reiniciar</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-md-12" style="margin-top: 30px;">
            {{ grid_search(grid) }}
            {{ grid(grid, _self) }}
            {% block grid_filters %}{% endblock %}
        </div>
    </div>
{% endblock %}



