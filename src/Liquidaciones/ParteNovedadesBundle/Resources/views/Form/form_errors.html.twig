{# form_errors.html.twig #}
{% block form_errors %}
    
    {% spaceless %}
    
        {% if errors|length > 0 %}

            {% for error in errors %}
                
                {#<div class="mostrar error clearfix">#}
                    
                    <p> 
                        {#<span class="glyphicon glyphicon-remove"></span>#} {{ error.message }}
                    </p>
                    
                {#</div>#}
                    
            {% endfor %}

        {% endif %}
        
    {% endspaceless %}
    
{% endblock form_errors %}