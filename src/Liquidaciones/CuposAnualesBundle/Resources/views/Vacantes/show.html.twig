{% extends '::base.html.twig' %}

{% block guia %}
    {{ parent() }}
    <li><a href="{{ path('vacantes') }}">Vacante</a></li>
    <li class="active">Ver</li>
{% endblock %}
    
{% block contenido %}


<style>

    
    
</style>

    <h1>Vancate</h1>

    
{% if app.session.flashbag.has('aviso_ok') %}


    <div class="alert alert-success alert-dismissable" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>

    {% for flahMessage in app.session.flashbag.get('aviso_ok') %}
        <p><span class="glyphicon glyphicon-ok"></span> 
            {{ flahMessage }}
        </p>

    {% endfor %}

    </div>

{% endif %}
    
    
            <div class="row">
                <div class="col-md-6">
                    <label class="required" for=""> Cupo Mensual </label>
                    <div class="col-md-12"> {{ entity.cupos|raw }} </div>
                </div>
                
                <div class="col-md-6">
                    <label class="required" for=""> Vacantes </label>
                    <div class="col-md-12"> {{ entity.vacantes / 5 }} </div>
                </div>
            </div>
    
            

    <br>

            <ul class="record_actions list-inline" style="margint-top:15px;">
                <li>
                    <button type="button" class="btn btn-default" style="margin-left:0px;" onClick="location.href = '{{ path('vacantes') }}'">Volver</button>
                </li>
                {% if (is_granted('ROLE_16')) %}
                <li>
                    <button type="button" class="btn btn-ba" style="margin-left:0px;" onClick="location.href = '{{ path('vacantes_edit', { 'id': entity.id }) }}'">Editar</button>
                </li>
                {% endif %}

            </ul>


{% endblock %}
