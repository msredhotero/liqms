{% extends '::base.html.twig' %}

{% block guia %}
    {{ parent() }}
    <li><a href="{{ path('vacantes') }}">Vacantes Mensuales</a></li>
    <li class="active">Modificar</li>
{% endblock %}

{% block contenido -%}

    <h1><span class="glyphicon glyphicon-edit"></span> Modificar Vacante</h1>
    <ul class="list-group">
        <li class="list-group-item list-group-item-info"><span class="glyphicon glyphicon-list-alt"></span> informaci√≥n del Cupo Mensual</li>
        <li class="list-group-item list-group-item-default"><b>{{ descripcion }}</li>

    </ul>


{% if app.session.flashbag.has('aviso_error') %}

<div class="alert alert-danger alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>

{% for flahMessage in app.session.flashbag.get('aviso_error') %}
    <p>
        {{ flahMessage }}
    </p>

{% endfor %}
    {{ form_errors(edit_form) }}

</div>
{% endif %}
    
    
{% if app.session.flashbag.has('aviso_ok') %}

<div class="alert alert-success alert-dismissable" role="alert">

    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>

{% for flahMessage in app.session.flashbag.get('aviso_ok') %}
    <p><span class="glyphicon glyphicon-ok"></span> 
        {{ flahMessage }}
    </p>

{% endfor %}
    {{ form_errors(edit_form) }}

</div>
{% endif %}
    
    
    {{ form_start(edit_form) }}

                                
        <div class="row">
            <div class="form-group col-md-6" style="text-align: left;">
                {{ form_label(edit_form.cupos, null) }}
                <div class="input-group col-md-12">
                    {{ form_widget(edit_form.cupos) }}
                </div>
            </div>


            <div class="form-group col-md-4">
                {{ form_label(edit_form.vacantes) }}
                <div class="input-group col-md-12">
                    {{ form_widget(edit_form.vacantes, { 'value': entity.vacantes / 5 }) }}

                </div>
            </div>
                    
            
        </div>

        <div class="row">            
            <ul class="list-inline" style="margin-top:10px;">
                <li>

                    {{ form_widget(edit_form.Guardar) }}
                    {{ form_widget(edit_form._token) }}
                </li>
                <li>
                    <button type="button" class="btn btn-default" style="margin-left:0px;" onClick="location.href = '{{ path('vacantes') }}'">Volver</button>
                </li>
                <li>
                    {{ form_end(edit_form) }}
                </li>
                

            </ul>
        </div>
    


    <script type="text/javascript">
    $(document).ready(function(){
        
        $('#liquidaciones_cuposanualesbundle_vacantes_vacantes').number(true, 2, '.', '');
    });
    </script>
      
    
    

{% endblock %}
