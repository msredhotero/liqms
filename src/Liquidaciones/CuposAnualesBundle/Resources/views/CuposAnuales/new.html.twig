{% extends '::base.html.twig' %}

{% block guia %}
    {{ parent() }}
    <li><a href="{{ path('cuposanuales') }}">Cupos Anuales</a></li>
    <li class="active">Nuevo</li>
{% endblock %}

{% block contenido %}

<script type="text/javascript">
    $(document).ready(function(){

        $('#liquidaciones_cuposanualesbundle_cuposanuales_Monto').number(true, 2, '.','');

    });
</script>
<style>
    

    .separacion {
        padding: 6px;
    }
    
    .textoGrande {
        width: 75%;
    }
    
    .textoChico {
        width: 140px;
    }
    
    form.cupo .error ul li {
        border: 1px solid rgba(0, 0, 0, 0);
        border-radius: 4px;
        margin-bottom: 20px;
        padding: 15px;
        background-color: #F2DEDE;
        border-color: #EBCCD1;
        color: #A94442;
    }
    .form-horizontal .control-label {
    text-align: left;
    }
</style>

<h3><span class="glyphicon glyphicon-plus-sign"></span> Nuevo Cupo Anual</h3>

{% if app.session.flashbag.has('aviso_error') %}

<div class="alert alert-danger alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>

{% for flahMessage in app.session.flashbag.get('aviso_error') %}
    <p>
        {{ flahMessage }}
    </p>

{% endfor %}
    {{ form_errors(form) }}

</div>
{% endif %}


{% if app.session.flashbag.has('aviso_ok') %}

<div class="alert alert-success alert-dismissable" role="alert">
      
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>

{% for flahMessage in app.session.flashbag.get('aviso_ok') %}
    <p><span class="glyphicon glyphicon-ok"></span>
        {{ flahMessage }}
    </p>

{% endfor %}
    {{ form_errors(form) }}

</div>
{% endif %}

                            <form class="cupo form-inline" action="{{ path('cuposanuales_create') }}" method="post" {{ form_enctype(form) }}>
                                
                                <div class="row">
                                {{ form_errors(form.Descripcion) }}
                                {{ form_errors(form.Monto) }}
                                </div>
                                
                                <div class="row">
                                <div class="form-group col-md-6" style="text-align: left;">
                                    {{ form_label(form.Descripcion, null) }}
                                    <div class="input-group col-md-12">
                                        {{ form_widget(form.Descripcion) }}
                                    </div>
                                </div>
                                
                                
                                <div class="form-group col-md-6">
                                    {{ form_label(form.Anio, null) }}
                                    <div class="input-group col-md-12">
                                        {{ form_widget(form.Anio) }}
                                    </div>
                                </div>
                                </div>
                                    
                                <div class="row">    
                                <div class="form-group col-md-6">
                                    {{ form_label(form.Monto, null) }}
                                    <div class="input-group col-md-12">
                                        <span class="input-group-addon">$</span>
                                        {{ form_widget(form.Monto) }}
                                        <span class="input-group-addon">.00</span>
                                    </div>
                                </div>
                                
                                <div class="form-group col-md-6">
                                    {{ form_label(form.Activo, null) }}
                                    <div class="input-group col-md-12">
                                        {{ form_widget(form.Activo) }}
                                    </div>
                                </div>
                                </div>
                                
                                
                                <ul class="list-inline" style="margin-top:10px;">
                                        <li>
                                            
                                            {{ form_widget(form.Guardar) }}
                                            {{ form_widget(form._token) }}
                                        </li>
                                        <li>
                                            <button type="button" class="btn btn-default" style="margin-left:0px;" onClick="location.href = '{{ path('cuposanuales') }}'">Volver</button>
                                        </li>
                                    </ul>
                                    
                               
                          
                            </form>   


{% endblock %}

